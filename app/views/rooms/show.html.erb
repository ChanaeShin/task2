<div class="container room-show">
    <div class="row">
        <div class="col-md-8">
            <%= image_tag @room.image,class: "room-show-image" %>
            <div class="room-show-detile">
                <div class="room-show-detile-icon">
                    <a href="/">
                        <%if @room.image.attached? %>
                            <%= image_tag @room.image,class:"host-icon" %>    
                        <%else%>
                            <img class="host-icon" src="/assets/default_icon.jpg">
                        <%end%>
                    </a>
                </div>
                <div class="room-show-profile">
                    <p class="room-show-profile-name"><%= @room.name %></p>
                    <p class="room-show-profile-address"><%= @room.address %></p>
                </div>
            </div>
            <p class="room-show-detile-content"><%= @room.content %></p>
        </div>
        <div class="col-md-4">
            <div class="room-show-nav">
                <h5 class="price-icon"><%= @room.price %> / 日</h5>
                <div class="room-show-date-select">
        
                    <%= form_with( url: new_reservation_path, method: :get,local: true) do |f| %>
                        <%= f.label :start_date,"開始日" %>
                        <%= f.date_field :start_date, value: @s_date , class: "form-control mb-4" ,id: "start_date"%>

                        <%= f.label :end_date,"終了日" %>
                        <%= f.date_field :end_date , value: @e_date ,class: "form-control mb-4",id: "end_date"%>

                        <%= f.label :people,"人数" %>
                        <%= f.text_field :people, value: @people ,id: "person_num", class: "form-control mb-4" %>

                        <%= f.hidden_field :room_id, value: @room.id %>
                        <%= f.submit "予約する" ,class: "btn btn-primary form-control"%>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>