<table>
      <tr>
        <td><%= @room.image %></td>
      </tr>
      <tr>
        <td><%= @room.name %></td>
      </tr>
      <tr>
        <td><%= @room.address %></td>
      </tr>
      <tr>
        <td><%= @room.intro %></td>
      </tr>
      <tr>
        <td><%= @room.price %></td>
      </tr>
      <%= form_with( url: new_reservation_path, method: :get,local: true) do |f| %>
      <!--ポイントは、 method: :getの部分、GETで送信することで?room_id=1などをURLにつけてページ遷移できる -->
            <tr>
              <th><%= f.label :start_date,"開始日" %></th>
              <td><%= f.date_field :start_date, value: @s_date %></td>
            </tr>
            <tr>
              <th><%= f.label :end_date,"終了日" %></th>
              <td><%= f.date_field :end_date , value: @e_date %></td>
            </tr>
            <tr>
              <th><%= f.label :people,"人数" %></th>
              <td><%= f.text_field :'people', value: @people  %></td>
            </tr>
            <%= f.hidden_field :room_id, value: @room.id %>
        <tr><th></th><td><%= f.submit "予約する"%></td></tr>
      <% end %>
</table>