<div class="col-lg-10 room-view">
            <div class="room-view-box">
               
                    <div class="update-content">
                        <div class="row">
                            <h5>ルーム情報登録</h5>
                        </div>
                    </div>
                    
                    <%= render "shared/error", obj: @room %>
                     
                    <%= form_with model: @room do |f| %>
                    <table>
                      <tr>
                        <th><%= f.label :name ,"ルーム名" %></th>
                        <td><%= f.text_field :name %></td>
                      </tr>
 
                      <tr>
                        <th><%= f.label :intro ,"ルーム紹介" %></th>
                        <td><%= f.text_area :intro %></td>
                      </tr>
 
                      <tr>
                        <th><%= f.label :price ,"料金" %></th>
                        <td><%= f.text_field :price %></td>
                      </tr>
 
                      <tr>
                        <th><%= f.label :address ,"住所" %></th>
                        <td><%= f.text_area :address %></td>
                      </tr>
        
                      <tr>
                        <th><%= f.label :image,"ルーム画像" %></th>
                        <td><%= f.file_field :image %></td>
                      </tr>
                    </table>
                  <div>
                    <div class ="submit">
                      <%= f.submit "登録" %>
                    </div>
                  </div>
                  <% end %>
             </div>
 
</div>   