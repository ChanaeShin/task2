<h4>予約する</h4>


<%= form_with model: @reservation do |f| %>
      <table>
        <tbody>
          <tr>
            <th><%= @room.price %></th>
            <td></td>
          </tr>
          
          <tr>
            <th><%= f.label :start_date,"開始日" %></th>
            <td><%= f.date_field :start_date %></td>
          </tr>
          <tr>
            <th><%= f.label :end_date,"終了日" %></th>
            <td><%= f.date_field :end_date %></td>
          </tr>
          <tr>
            <th><%= f.label :people,"人数" %></th>
            <td><%= f.text_field :'people' %></td>
          </tr>
          </tbody>
        </table>
        
        <%= f.hidden_field :user_id, value: @user.id %>
      <div>
        <ul>
            <li><%= f.submit "予約を確定"%></li>
            <li><%= link_to "ルーム詳細に戻る", "/rooms/index" %></li>
        </ul>
     </div>
  <% end %>