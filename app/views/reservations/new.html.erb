<div class="container reservations-new">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="reservations-new-nav">
                <h4 class="reservations-new-check-content">予約内容確認</h4>
                <h5 class="price-icon"><%= @room.price %> / 日</h5>
                <div class="reservations-new-date-select">
                    <%= form_with model: @reservation do |f| %>
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <%= f.hidden_field :room_id, value: @room.id %>

                        <%= f.label :start_date,"開始日" %>
                        <%= f.date_field :start_date, value: @s_date ,:readonly => true, class: "form-control mb-4" ,id: "reservation_start_date"%>
                        
                        <%= f.label :end_date,"終了日" %>
                        <%= f.date_field :end_date , value: @e_date ,:readonly => true ,class: "form-control mb-4" ,id: "reservation_end_date" %>
                        
                        <h6 class="reservations-new-check-content">使用日数 : <%= @day %>日</h6>
                        <%= f.label :people,"人数" %>
                        <%= f.text_field :people, value: @people ,:readonly => true ,class: "form-control mb-4"%>

                        <%= f.label :total_amount,"合計料金" %>
                        <%= f.text_field :'total_amount', value: @amount ,:readonly => true , class: "form-control mb-4", id: "reservation_total_amount"%>

                        <p class="reservations-new-check-content">上記内容でよろしければ「予約を確定」を押してください</p>
                    
                        <%= f.submit "予約を確定" ,class: "btn btn-primary form-control my-3"%>
                        <%= link_to "ルーム詳細に戻る", "/rooms/#{@room.id}",class: "btn btn-secondary form-control" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>