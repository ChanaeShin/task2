<h4>予約する</h4>


<%= form_with model: @reservation do |f| %>
      <table>
        <tbody>
          <tr>
            <th>一日あたり/</th>
            <td id="price" value="<%= @room.price %>"><%= @room.price %>円</td>
          </tr>
          
          <tr>
            <th><%= f.label :start_date,"開始日" %></th>
            <td><%= f.date_field :start_date, value: @s_date ,:readonly => true %></td>
          </tr>
          <tr>
            <th><%= f.label :end_date,"終了日" %></th>
            <td><%= f.date_field :end_date , value: @e_date ,:readonly => true %></td>
          </tr>
          <tr>
            <th><%= f.label :people,"人数" %></th>
            <td><%= f.text_field :'people', value: @people ,:readonly => true %></td>
          </tr>
          <tr>
            <th><%= f.label :amount,"合計料金" %></th>
            <td><%= f.text_field :'amount', value: @amount ,:readonly => true %></td>
          </tr>
          </tbody>
        </table>
        
        
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :room_id, value: @room.id %>
       
      
      <div>
        <ul>
            <li><%= f.submit "予約を確定"%></li>
            <li><%= link_to "ルーム詳細に戻る", "/rooms/index" %></li>
        </ul>
     </div>
  <% end %>