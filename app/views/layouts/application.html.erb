<!DOCTYPE html>
<html>
 
<head>
  <title>Task2</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
 
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
 
<body>
 
  <header class="header">
    <div class="header-inner">
      <div class="header-left-nav">
        <a href="/"><img alt="サイトのロゴ画像" src="/assets/logo.png"></a>
        <%= form_with( url: rooms_search_path, method: :get,local: true) do |f| %>
          <div class="header-sharch d-lg-inline-block d-none">
            <%= f.text_field :area, class: "form-control",placeholder: "エリア" %>
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div class="header-sharch d-lg-inline-block d-none">
            <%= f.text_field :keyword, class: "form-control",placeholder: "キーワード" %>
            <i class="fas fa-search"></i>
          </div>
          <%= f.submit "" ,class: "d-none"%>
        <% end %>
      </div>
 
      <% if user_signed_in? %>
      <div class="header-right-nav">
        <div class="nav-item d-sm-inline-block d-none">
          test
        </div>
        <div class="nav-item">
          <img class="mx-3 p-1 host-icon nav-trigger" alt="メニュー" src="/assets/img_kyoto.jpg">
          <ul class="header-nav-menu">
            <li><%=link_to "ルーム登録", new_room_path %></li>
            <li><%=link_to "予約済みルーム一覧", reservations_path %></li>
            <li><%=link_to "登録済みルーム一覧", rooms_posts_path %></li>
            <li><%=link_to "設定", users_account_path %></li>
            <li><%=link_to "ログアウト", destroy_user_session_path ,method: "delete" %></li>
          </ul>
        </div>
      </div>
      <% else %>
      <div class="header-right-nav">
        <div class="nav-item">
          <a class="btn btn-primary my-2 mx-3" href="/users/sign_in">ログイン</a>
          <a class="btn btn-secondary" href="/users/sign_up">登録する</a>
        </div>
      </div>
      <% end %>
 
    </div>
  </header>
 
 
  <div class="clearfix"></div>
  <script>
    $(function () {
      $('.nav-trigger').click(function () {
        $('.header-nav-menu').toggle(200);
      })
    });
  </script>
 
  <div class="notifications">
    <div class="notice"><%= notice %></div>
    <!--<div class="alert"><%= alert %></div>-->
  </div>

  <%= yield %>
 
  <footer class="footer">
    <p>© 2020 POTEPAN.INC.</p>
  </footer>
 
</body>
 
</html>
